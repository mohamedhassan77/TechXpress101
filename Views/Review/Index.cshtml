@model IEnumerable<TechXpress.Models.Review>

@{
    ViewData["Title"] = "Reviews";
}

<h2>Reviews</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Product</th>
            <th>Rating</th>
            <th>Review Text</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Id</td>
                <td>@review.User?.UserName</td> 
                <td>@review.Product?.Name</td> 
                <td>@review.Rating</td>
                <td>@review.ReviewText</td>
                <td>@review.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@review.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>