@model TechXpress.Models.Address

@{
    ViewData["Title"] = "Delete Address";
}

<h2>Delete Address</h2>
<h3>Are you sure you want to delete this?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Address Line 1</dt>
        <dd class="col-sm-10">@Model.AddressLine1</dd>
        <dt class="col-sm-2">Address Line 2</dt>
        <dd class="col-sm-10">@Model.AddressLine2</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>
        <dt class="col-sm-2">Zip Code</dt>
        <dd class="col-sm-10">@Model.ZipCode</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
        <dt class="col-sm-2">Default</dt>
        <dd class="col-sm-10">@(Model.IsDefault ? "Yes" : "No")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>