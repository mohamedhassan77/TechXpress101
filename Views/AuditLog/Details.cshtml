@model TechXpress.Models.AuditLog

@{
    ViewData["Title"] = "Audit Log Details";
}

<h2>Audit Log Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.UserName</dd>

        <dt class="col-sm-2">Action</dt>
        <dd class="col-sm-10">@Model.Action</dd>

        <dt class="col-sm-2">Timestamp</dt>
        <dd class="col-sm-10">@Model.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</dd>

        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.Details</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>