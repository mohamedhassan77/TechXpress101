@model IEnumerable<TechXpress.Models.Wishlist>

@{
    ViewData["Title"] = "Wishlists";
}

<h2>Wishlists</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Number of Items</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wishlist in Model)
        {
            <tr>
                <td>@wishlist.Id</td>
                <td>@wishlist.User?.UserName</td> <!-- Assuming User has a UserName property -->
                <td>@wishlist.WishlistItems?.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@wishlist.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>