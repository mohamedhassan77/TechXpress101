@model IEnumerable<TechXpress.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Order Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@order.User?.UserName</td> <!-- Assuming User has a UserName property -->
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>