@model IEnumerable<TechXpress.Models.OrderDetail>

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Order ID</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderDetail in Model)
        {
            <tr>
                <td>@orderDetail.Id</td>
                <td>@orderDetail.OrderId</td>
                <td>@orderDetail.Product?.Name</td> <!-- Assuming Product has a Name property -->
                <td>@orderDetail.Quantity</td>
                <td>@orderDetail.UnitPrice.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@orderDetail.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>