@model TechXpress.Models.OrderDetail

@{
    ViewData["Title"] = "Order Detail Details";
}

<h2>Order Detail Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd> <!-- Assuming Product has a Name property -->

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@Model.UnitPrice.ToString("C")</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>