@model TechXpress.Models.Shipping

@{
    ViewData["Title"] = "Shipping Details";
}

<h2>Shipping Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>

        <dt class="col-sm-2">Shipping Date</dt>
        <dd class="col-sm-10">@Model.ShippingDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Tracking Number</dt>
        <dd class="col-sm-10">@Model.TrackingNumber</dd>

        <dt class="col-sm-2">Shipping Method</dt>
        <dd class="col-sm-10">@Model.ShippingMethod</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>