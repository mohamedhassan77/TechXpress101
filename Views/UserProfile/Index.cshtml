@model IEnumerable<TechXpress.Models.UserProfile>

@{
    ViewData["Title"] = "User Profiles";
}

<h2>User Profiles</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Profile Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userProfile in Model)
        {
            <tr>
                <td>@userProfile.Id</td>
                <td>@userProfile.User?.UserName</td> <!-- Assuming User has a UserName property -->
                <td>@userProfile.User.UserName</td>
                               <td>@userProfile.PhoneNumber</td>
                <td>
                    @if (!string.IsNullOrEmpty(userProfile.ProfilePictureUrl))
                    {
                        <img src="@userProfile.ProfilePictureUrl" alt="Profile Picture" style="width: 50px; height: 50px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@userProfile.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>