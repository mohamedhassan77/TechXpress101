@model TechXpress.Models.UserProfile

@{
    ViewData["Title"] = "User Profile Details";
}

<h2>User Profile Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.UserName</dd> <!-- Assuming User has a UserName property -->


        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.User.UserName</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Profile Picture</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl" alt="Profile Picture" style="width: 100px; height: 100px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>