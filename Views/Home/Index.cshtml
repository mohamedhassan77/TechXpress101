@model TechXpress.Models.HomePageData

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to TechXpress</h1>
    <p>Your one-stop shop for the latest tech products.</p>
</div>


<!-- Featured Products -->
<div class="mt-5">
    <h2>Featured Products</h2>
    <div class="row">
        @if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
        {
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><strong>Price:</strong> @product.Price.ToString("C")</p>
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    No featured products available.
                </div>
            </div>
        }
    </div>
</div>
<!-- Popular Categories -->
<div class="mt-5">
    <h2>Popular Categories</h2>
    <div class="row">
        @foreach (var category in Model.PopularCategories)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <a href="@Url.Action("Details", "Category", new { id = category.Id })" class="btn btn-secondary">Explore</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Latest Reviews -->
<div class="mt-5">
    <h2>Latest Reviews</h2>
    <div class="row">
        @foreach (var review in Model.LatestReviews)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@review.Title</h5>
                        <p class="card-text">@review.Content</p>
                        <p class="card-text"><strong>Rating:</strong> @review.Rating / 5</p>
                        <p class="card-text"><small class="text-muted">By @review.User?.UserName on @review.CreatedDate.ToString("MMM dd, yyyy")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Statistics -->
<div class="mt-5">
    <h2>Statistics</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>
                    <p class="card-text">@Model.TotalProducts</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text">@Model.TotalOrders</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text">@Model.TotalUsers</p>
                </div>
            </div>
        </div>
    </div>
</div>